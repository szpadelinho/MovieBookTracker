<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_list_name"
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default Name"
                />
            <TextView
                android:id="@+id/item_list_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default Object Type"
                />
            <TextView
                android:id="@+id/item_list_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default Genre"
                />
            <TextView
                android:id="@+id/item_list_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default Description"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/item_list_icon"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:src="@drawable/movie"
                android:layout_gravity="center"
                />
            <CheckBox
                android:id="@+id/item_list_is_done"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Is finished?"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/item_list_score"
                android:textSize="8pt"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Default Score"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>